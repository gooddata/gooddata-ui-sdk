{
    "exclude": ["**/tests", "**/test"],
    "include": ["src/**/*", "src/**/*.json"],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./esm",
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "importHelpers": true,
        "incremental": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}
