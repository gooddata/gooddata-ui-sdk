{
    "_note": "This file is only for IDE. For build use tsconfig.[dev/build].json (dev mode is less strict)",
    "compilerOptions": {
        "jsx": "react",
        "lib": ["es7", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "suppressImplicitAnyIndexErrors": true,
        "baseUrl": "..",
        "paths": {
            "@gooddata/sdk-ui": ["sdk-ui/src"],
            "@gooddata/sdk-ui-vis-commons": ["sdk-ui-vis-commons/src"],
            "@gooddata/sdk-model": ["sdk-model/src"],
            "@gooddata/sdk-backend-spi": ["sdk-backend-spi/src"],
        }
    },
    "exclude": ["**/node_modules", "dist", "esm", "**/__mocks__/*"]
}
