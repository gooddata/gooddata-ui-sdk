{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es7", "dom"],
        "importHelpers": true,
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": "..",
        "paths": {
            "@gooddata/sdk-embedding": ["sdk-embedding/src"],
            "@gooddata/sdk-model": ["sdk-model/src"],
            "@gooddata/sdk-backend-base": ["sdk-backend-base/src"],
            "@gooddata/sdk-backend-spi": ["sdk-backend-spi/src"],
            "@gooddata/api-client-bear": ["api-client-bear/src"],
            "@gooddata/api-model-bear": ["api-model-bear/src"]
        }
    },
    "exclude": ["**/node_modules", "dist", "esm"]
}
