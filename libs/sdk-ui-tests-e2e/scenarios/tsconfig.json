{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "incremental": false,
        "lib": ["es7", "dom"],
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "baseUrl": "../../libs",
        "paths": {
            "@gooddata/sdk-backend-spi": ["sdk-backend-spi/src"],
            "@gooddata/sdk-backend-mockingbird": ["sdk-backend-mockingbird/src"],
            "@gooddata/sdk-embedding": ["sdk-embedding/src"],
            "@gooddata/sdk-model": ["sdk-model/src"],
            "@gooddata/sdk-ui": ["sdk-ui/src"],
            "@gooddata/sdk-ui-charts": ["sdk-ui-charts/src"],
            "@gooddata/sdk-ui-ext": ["sdk-ui-ext/src"],
            "@gooddata/sdk-ui-geo": ["sdk-ui-geo/src"],
            "@gooddata/sdk-ui-pivot": ["sdk-ui-pivot/src"],
            "@gooddata/sdk-ui-filters": ["sdk-ui-filters/src"],
            "@gooddata/sdk-ui-dashboard": ["sdk-ui-dashboard/src"],
            "@gooddata/util": ["util/src"]
        }
    },
    "include": ["src", "typings"],
    "exclude": ["**/node_modules", "dist"]
}
