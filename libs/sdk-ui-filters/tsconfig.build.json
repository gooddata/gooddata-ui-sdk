{
    "extends": "../tsconfig.react.json",
    "exclude": ["**/tests", "**/test"],
    "include": ["src/**/*", "src/**/*.json", "scripts/validateCss.js"],
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./esm",
        "composite": false,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictFunctionTypes": false,
        "useUnknownInCatchVariables": false,
    }
}
