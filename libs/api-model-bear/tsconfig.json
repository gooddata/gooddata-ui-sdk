{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "importHelpers": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist",
        "strict": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": ["**/node_modules", "dist", "esm"]
}
