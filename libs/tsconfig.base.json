{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "dom"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "importHelpers": true,
        "incremental": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true
    }
}
