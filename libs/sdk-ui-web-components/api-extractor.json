/**
 * Config file for API Extractor.  For more info, please visit: https://api-extractor.com
 */
{
    "$schema": "https://developer.microsoft.com/json-schemas/api-extractor/v7/api-extractor.schema.json",
    "extends": "../../common/config/api-extractor/api-extractor.json",
    "dtsRollup": {
        "enabled": true,
        "untrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>.d.ts"
        //    "betaTrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>-beta.d.ts",
        //    "publicTrimmedFilePath": "<projectFolder>/esm/<unscopedPackageName>-public.d.ts"
    },
    "tsdocMetadata": {
        "enabled": true,
        "tsdocMetadataFilePath": "<projectFolder>/esm/tsdoc-metadata.json"
    },
    "mainEntryPointFilePath": "<projectFolder>/esm/index.d.ts"
}
