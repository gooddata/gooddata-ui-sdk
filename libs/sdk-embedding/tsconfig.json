{
    "_note": "This file is only for IDE. For build use tsconfig.[dev/build].json (dev mode is less strict)",
    "compilerOptions": {
        "target": "es2017",
        "jsx": "react",
        "lib": ["es2017", "dom"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "removeComments": false,
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./esm",
        "sourceMap": true,
        "strict": true,
        //"baseUrl": "..",
    /*    "paths": {
            "@gooddata/api-model-bear": ["api-model-bear/src"]
        }*/
    },
    "compileOnSave": false,
    "exclude": ["**/node_modules", "esm", "**/__mocks__/**/*"]
}
